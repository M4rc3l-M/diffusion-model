<diffusion>

<!-- Social Network Model Configurations -->
<!-- specify the network strucuture ( options: random( random ER MODEL) / sw /rand-reg (random-regular model)) and the diffusion model -->
<snModel
	diffusionType="lt"
	networkType="rand-reg"
/>

<!-- network configurations-->
<randomNetwork
	normalise="true"
	avg_links="2"
/>

<randRegNetwork

        normalise="true"
        avg_links="3"
/>

<!--specify distance in km-->
<swNetwork
	normalise="true" 
	distance="0.8"
	avg_links="3"
	rewire_probability="0.0"
	coord_file="homeLocations.txt"
/>

<!-- diffusion model configuration-->
<!-- diff_turn: step size of the diffusion process (mins), seed = percentage of initially active agents (%) , thresholdType = guassian / random -->
<!-- stratgey = random or nearfire or prob-->
<!--  Thigh is replaced in SNConfig as Thigh = 2 * Tlow -->
<!-- 1st config set: common to all diffusion models, 2nd set: specific for LT diffusion model, 3rd set: specific for CLT diffusion model-->
<diffModel


	diff_turn="60"	
	standard_deviation="0.025"
	strategy="random"
	thresholdType="guassian"
	
	diff_seed="5" 
	mean_act_threshold="0.3"
	mean_high_threshold="0.7"

	panicSeed="10"
	waitSeed="30"
	waitT="0.5"
	panicT="0.5"

	
/>

</diffusion>


